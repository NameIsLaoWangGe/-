ballisticNum - 1];\r\n        for (let index = 0; index < angleArr.length; index++) {\r\n            const weapon = this.createWeapon(null, this.Hero.x, this.Hero.y);\r\n            weapon.rotation = angleArr[index];\r\n        }\r\n    }\r\n}\r\n",
