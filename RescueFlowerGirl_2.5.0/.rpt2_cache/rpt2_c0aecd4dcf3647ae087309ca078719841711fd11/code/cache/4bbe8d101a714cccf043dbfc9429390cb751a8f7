  "code": "import { TimerAdmin, Tools } from \"../Frame/Lwg\";\r\nimport { _Res } from \"../Frame/_PreLoad\";\r\nimport EnemyBullet from \"./EnemyBullet\";\r\nexport class EnemyAttack {\r\n    static createBullet(enemy) {\r\n        const gP = this.getEnemyGp(enemy);\r\n        const bullet = Tools._Node.createPrefab(_Res._list.prefab2D.EnemyBullet.prefab, this.EBParent, [gP.x, gP.y], EnemyBullet);\r\n        return bullet;\r\n    }\r\n    static getEnemyGp(enemy) {\r\n        const parent = enemy.parent;\r\n        return parent.localToGlobal(new Laya.Point(enemy.x, enemy.y));\r\n    }\r\n    static attackType1(enemy) {\r\n        const angleSpeed = 15;\r\n        const gP = this.getEnemyGp(enemy);\r\n        TimerAdmin._frameRandomLoop(120, 300, enemy, () => {\r\n            for (let index = 0; index < 3; index++) {\r\n                const bullet = this.createBullet(enemy);\r\n                let speed = 0;\r\n                TimerAdmin._frameLoop(1, bullet, () => {\r\n                    const point = Tools._Point.getRoundPos(index * angleSpeed + 180 - angleSpeed, speed += 2, gP);\r\n                    bullet.pos(point.x, point.y);\r\n                });\r\n            }\r\n        });\r\n    }\r\n    static attackType2(enemy) {\r\n        TimerAdmin._frameRandomLoop(50, 100, enemy, () => {\r\n            const bullet = this.createBullet(enemy);\r\n            TimerAdmin._frameLoop(1, bullet, () => {\r\n                bullet.y += 3;\r\n            });\r\n        });\r\n    }\r\n    static attackType3(enemy) {\r\n        TimerAdmin._frameLoop(80, enemy, () => {\r\n            const bullet = this.createBullet(enemy);\r\n            const gPoint = this.getEnemyGp(enemy);\r\n            const angle = Tools._Number.randomOneBySection(45, 135) + 90;\r\n            let speed = 5;\r\n            TimerAdmin._frameLoop(1, bullet, () => {\r\n                const point = Tools._Point.getRoundPos(angle, speed += 5, gPoint);\r\n                bullet.pos(point.x, point.y);\r\n            });\r\n        });\r\n    }\r\n    static attackType4(enemy) {\r\n        let time = 0;\r\n        const num = 20;\r\n        let speed = 0;\r\n        TimerAdmin._frameRandomLoop(50, 100, this, () => {\r\n            time++;\r\n            const gPoint = this.getEnemyGp(enemy);\r\n            for (let index = 0; index < num; index++) {\r\n                const bullet = this.createBullet(enemy);\r\n                bullet.rotation = 360 / num * index + time * 10;\r\n                const point = Tools._Point.getRoundPos(bullet.rotation, speed += 5, gPoint);\r\n                bullet.pos(point.x, point.y);\r\n            }\r\n        }, true);\r\n    }\r\n}\r\n",
